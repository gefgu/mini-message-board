<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
  </head>
  <body>
    <div class="flex justify-between">
      <h1><%= title %></h1>
      <a href="/new">Add Message</a>
    </div>
    <% messages.forEach(message => { %>
    <div class="message">
      <p class="text"><%= message.text %></p>
      <div class="message-data">
        <p><%= message.user %></p>
        <p><%= message.added %></p>
      </div>
    </div>
    <% }) %>
  </body>
</html>
